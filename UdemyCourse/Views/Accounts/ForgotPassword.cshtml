@{
    ViewData["Title"] = "Forgot Password";
}

@model App.Models.Accounts.ForgotPasswordModel;

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Accounts" asp-action="ForgotPassword">
            <h4>To reset your password, enter you email address to get confirmation code</h4>
            <hr />

            <div asp-validation-summary="All" class="text-danger">
            </div>

            <div class="form-group">
                <label asp-for="Email">
                </label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger">
                </span>
            </div>

            <button type="submit" class="btn btn-primary">
                Send Confirmation Code
            </button>
        </form>
    </div>
</div>

